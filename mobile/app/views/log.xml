<Alloy>
	<Window id="LogWindow" title="Log a Fish">
		<RightNavButton>
			<Button image="images/icon_settings.png" onClick="App.openSettings" />
		</RightNavButton>
		
		<View class="container">
			<View class="row" id="RowSpecies">
				<Label class="key" text="Species" />
				<Label id="ValueSpecies" class="value" text="Tap to Select" />
			</View>
			
			<View class="row" id="RowWeight">
				<Label class="key" text="Weight" />
				<Label id="ValueWeight" class="value" text="0 lb 0 oz" />
			</View>
			
			<View class="row" id="RowLength">
				<Label class="key" text="Length" />
				<Label id="ValueLength" class="value" text="0 ft 0 in" />
			</View>
			
			<Button id="Submit" title="Submit" />
		</View>
	</Window>
</Alloy>